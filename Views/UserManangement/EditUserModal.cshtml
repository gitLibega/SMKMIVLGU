
@model SMKMIVLGU.Models.EditUserViewModel
@{
    ViewBag.Title = "Редактирование пользователя";
}

<form method="post" asp-action="EditUserModal" asp-controller="UserManangement">
    <div class="modal-header">
        Редактировать пользователя
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        
    </div>
    <div class="modal-body">


        <div class="form-group">
            <input type="hidden" asp-for="idUser" />
        </div>
        <div class="form-group">
            <label asp-for="FIO" class="control-label">ФИО</label>
            <input type="text" asp-for="FIO" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Login" class="control-label">Логин</label>
            <input type="text" asp-for="Login" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Department" class="control-label">Отдел</label>
            <input type="text" asp-for="Department" class="form-control" />
        </div>
        <div class="form-group">

            <label asp-for="Password" class="control-label">Пароль</label>
            <input type="text" asp-for="Password" class="form-control" />
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label class="control-label">Связи</label><br />
                @foreach (var rel in Model.AllUsers)
                {

                    <input type="checkbox" name="rels" value="@rel.Id"
                           @(Model.UserRelationships.Contains(rel.Id) ? "checked=\"checked\"" : "") />@rel.FIO <br />
                    }
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label class="control-label">Процессы</label><br />
                @foreach (var ik in Model.AllIks)
                {
                    var kek = $"{ik.СodeIkProcess}({ik.RSMK})";
                    <input type="checkbox" name="iks" value="@ik.id"
                           @(Model.UserIks.Contains(ik.id) ? "checked=\"checked\"" : "") />@kek<br />
                    }
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <div class="form-group">
            <button type="submit"  class="btn btn-outline-secondary" >Сохранить
                </button>
        </div>
    </div>
</form>