@using Microsoft.AspNetCore.Identity
@model SMKMIVLGU.Models.PermissionViewModel
@{
    ViewBag.Title = "Редактирование пользователя";
}
<head>
 
</head>
<form method="post" asp-action="EditUserRole" asp-controller="RolesManangement">
    <div class="modal-header">
        Изменение ролей для пользователя @Model.UserName
        <button type="button" class="close" data-dismiss="modal">&times;</button>

    </div>
    <div class="modal-body">



        <div class="row">
            <div class="col-lg-4">
                <div class="form-group">
                    <input type="hidden" asp-for="UserId" />
                </div>
                <div class="form-group">

                    @foreach (IdentityRole role in Model.AllRoles)
                    {
                        <input type="checkbox" name="roles" value="@role.Name"
                               @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
                        }
                </div>
            </div>

            <div class="col-md-8">

            </div>
        </div>
    </div>
        <div class="modal-footer">
            <div class="form-group">
                <button type="submit" class="btn btn-outline-secondary">
                    Сохранить
                </button>
            </div>
        </div>
   
</form>
